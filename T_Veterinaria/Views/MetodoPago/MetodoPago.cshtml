@model List<T_Veterinaria.Models.ViewModels.Metodo_PagoViewModels>

@{
    ViewBag.Title = "Metodo de Pago";
}

<div class="container mt-5 p-4 bg-light shadow rounded">
    <h2 class="text-center mb-4">Métodos de Pago</h2>

    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-outline-dark me-2" href="~/Home/Index">Volver al Inicio</a>
        <a class="btn btn-outline-success" href="~/MetodoPago/NuevoMetodoPago">Agregar Método de Pago</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>MetodoID</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oElement in Model)
                {
                    <tr>
                        <td>@oElement.MetodoID</td>
                        <td>@oElement.Nombre</td>
                        <td>
                            <a class="btn btn-outline-primary" href="~/MetodoPago/EditarMetodoPago/@oElement.MetodoID">Editar</a>
                            <a class="btn btn-outline-danger" href="~/MetodoPago/EliminarMetodoPago/@oElement.MetodoID"
                               onclick="return confirm('¿Seguro que desea eliminar este método de pago?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
