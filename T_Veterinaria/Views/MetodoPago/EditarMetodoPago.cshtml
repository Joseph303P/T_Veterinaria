@model T_Veterinaria.Models.ViewModels.Editar.EditarMetodoPago

@{
    ViewBag.Title = "Editar Método de Pago";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="width: 30rem;">
        <h2 class="text-center">Editar Método de Pago</h2>

        @using (Html.BeginForm("EditarMetodoPago", "MetodoPago", FormMethod.Post))
        {
            <div class="form-group mt-3">
                @Html.HiddenFor(d => d.MetodoID)

                @Html.LabelFor(d => d.Nombre, "Nombre del Método", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control", placeholder = "Ingrese el nuevo nombre del método de pago" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-start align-items-center mt-4">
                <a class="btn btn-outline-danger me-2" href="~/MetodoPago/MetodoPago">Cancelar</a>
                <div class="ms-auto">
                    <input value="Guardar" class="btn btn-primary" type="submit" />
                </div>
            </div>
        }
    </div>
</div>
