@model T_Veterinaria.Models.New.NuevoServicio

@{
    ViewBag.Title = "Nuevo Servicio";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="width: 30rem;">
        <h2 class="text-center">Nuevo Servicio</h2>

        @using (Html.BeginForm("NuevoServicio", "Servicio", FormMethod.Post))
        {
            <div class="form-group mt-3">
                @Html.LabelFor(d => d.NombreServicio, "Nombre del Servicio", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.NombreServicio, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.NombreServicio, null, new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(d => d.Descripcion, "Descripción", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.Descripcion, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Descripcion, null, new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(d => d.Precio, "Precio", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.Precio, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Precio, null, new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(d => d.DuracionMinutos, "Duración (minutos)", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.DuracionMinutos, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DuracionMinutos, null, new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-start align-items-center mt-4">
                <a class="btn btn-outline-danger me-2" href="~/Servicio/Servicio">Cancelar</a>
                <div class="ms-auto">
                    <input value="Guardar" class="btn btn-primary" type="submit" />
                </div>
            </div>
        }
    </div>
</div>
