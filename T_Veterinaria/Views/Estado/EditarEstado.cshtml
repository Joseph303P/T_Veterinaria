@model T_Veterinaria.Models.ViewModels.Editar.EditarEstado
@{
    ViewBag.Title = "Editar Estado";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="width: 30rem;">
        <h2 class="text-center">Editar Estado</h2>

        @using (Html.BeginForm("EditarEstado", "Estado", FormMethod.Post))
        {
            @Html.HiddenFor(d => d.EstadoID)

            <div class="form-group mt-3">
                @Html.LabelFor(d => d.Descripcion, "Descripción", new { @class = "form-label" })
                @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Descripcion, null, new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-start align-items-center mt-4">
                <a class="btn btn-outline-danger me-2" href="~/Estado/Estado">Cancelar</a>
                <div class="ms-auto">
                    <input value="Guardar" class="btn btn-primary" type="submit" />
                </div>
            </div>
        }
    </div>
</div>
