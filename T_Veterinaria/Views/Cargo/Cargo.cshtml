@model List<T_Veterinaria.Models.ViewModels.ListarCargorViewModels>
@{
    ViewBag.Title = "Cargo";
}

<div class="container mt-5 p-4 bg-light shadow rounded">
    <h2 class="text-center mb-4">Gestión de Cargos</h2>

    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-outline-dark me-2" href="~/Home/Index">Volver al Inicio</a>
        <a class="btn btn-outline-success" href="~/Cargo/NuevoCargo">Agregar Cargo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>Cargo ID</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oElement in Model)
                {
                    <tr>
                        <td>@oElement.CargoId</td>
                        <td>@oElement.Descripcion</td>
                        <td>
                            <a class="btn btn-outline-primary btn-sm me-1" href="~/Cargo/EditarCargo/@oElement.CargoId">Editar</a>
                            <a class="btn btn-outline-danger btn-sm" href="~/Cargo/EliminarCargo/@oElement.CargoId"
                               onclick="return confirm('¿Seguro que desea eliminar este cargo?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
