@model T_Veterinaria.Models.ViewModels.Editar.EditarDetallePago
@{
    ViewBag.Title = "EditarDetallePago";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="width: 30rem;">
        <h2 class="text-center">Editar Detalle de Pago</h2>

        @using (Html.BeginForm("EditarDetallePago", "DetallePago", FormMethod.Post))
        {
            <div class="form-group mt-3">
                @Html.HiddenFor(d => d.DetalleID)

                <div>
                    @Html.LabelFor(d => d.PagoID, "Pago ID", new { @class = "form-label" })
                    @Html.TextBoxFor(d => d.PagoID, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.PagoID, null, new { @class = "text-danger" })
                </div>

                <div>
                    @Html.LabelFor(d => d.CitaID, "Cita ID", new { @class = "form-label" })
                    @Html.TextBoxFor(d => d.CitaID, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.CitaID, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a class="btn btn-outline-danger" href="~/DetallePago/DetallePago">Cancelar</a>
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        }
    </div>
</div>
