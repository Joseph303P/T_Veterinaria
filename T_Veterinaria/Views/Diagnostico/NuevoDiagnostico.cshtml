@model T_Veterinaria.Models.New.NuevoDiagnostico
@{
    ViewBag.Title = "NuevoDiagnóstico";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="width: 30rem;">
        <h2 class="text-center">Nuevo Diagnóstico</h2>

        @using (Html.BeginForm("NuevoDiagnostico", "Diagnostico", FormMethod.Post))
        {
            <div class="form-group mt-3">
                @Html.LabelFor(d => d.CitaID, "Cita", new { @class = "form-label" })
                @Html.DropDownListFor(d => d.CitaID, (IEnumerable<SelectListItem>)ViewBag.CitaPendiente, "Seleccionar cita pendiente", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.CitaID, null, new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(d => d.Descripcion, null, new { @class = "form-label" })
                @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Descripcion, null, new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-start align-items-center mt-4">
                <a class="btn btn-warning me-2" href="~/Citas/Citas_Person_Masc">Ver Detalle</a>
                <a class="btn btn-outline-danger me-2" href="~/Home/Index">Cancelar</a>
                <div class="ms-auto">
                    <input value="Guardar" class="btn btn-primary" type="submit" />
                </div>
            </div>
        }
    </div>
</div>
